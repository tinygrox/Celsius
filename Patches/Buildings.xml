<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<!-- Note: Heat capacity in J/C, conductivity in W/C. Figures can be taken e.g. here: https://www.engineeringtoolbox.com/specific-heat-solids-d_154.html -->

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[thingClass="Mineable"]/statBases</xpath>
		<value>
			<HeatCapacity>2200000</HeatCapacity>
			<HeatConductivity>2.5</HeatConductivity>
		</value>
	</Operation>

	<Operation Class="XmlExtensions.PatchOperationSafeAddOrReplace">
		<xpath>Defs/ThingDef[defName="Wall"]/statBases</xpath>
		<value>
			<Mass>20</Mass>
			<HeatCapacity>16000</HeatCapacity>
		</value>
	</Operation>

	<Operation Class="XmlExtensions.PatchOperationSafeAddOrReplace">
		<xpath>Defs/ThingDef[thingClass="Building_Door"]/statBases</xpath>
		<value>
			<Mass>8</Mass>
			<HeatCapacity>12000</HeatCapacity>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Vent"]/statBases</xpath>
		<value>
			<HeatCapacity>9300</HeatCapacity>
			<HeatConductivity>20</HeatConductivity>
		</value>
	</Operation>

</Patch>
